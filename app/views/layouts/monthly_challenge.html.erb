<div id="content" class='text-center'>
	<div id="ChallengeRow">
		<div id="mainContent">
			<section>
				<article class="blogPost">
					<div id="challengeHeader">
						<div id="challengeTitle" class='bigtitle'>
							<h1><%= @challenge_title %></h1>
						</div>
						<div id ="commentCount">
							<a href=#comments> <%= Comment.where(month: challenge_month, league: challenge_league).count %>
							Comments</a>
						</div>
					</div>
					<iframe id="challengeDescription" src=<%="https://dl.dropboxusercontent.com/u/21712432/#{params[:league].capitalize}League#{params[:month].capitalize}#{params[:year]}.pdf" %> width="600" height="750"></iframe>
				</article>
			</section>
		</div>

		<div id="submitPanel">

			<aside>
				<%= render template: 'layouts/submit' %>
			</aside>
		</div>
	</div>
</div>
<%= render template: 'layouts/comment_section' %>
