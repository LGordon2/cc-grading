<div>
	<h1 class="masthead bigtitle">Orasi Coding Challenge</h1>
</div>
<div class="login-form">

	<%= form_for :user, html: {role: "form"} do |f| %>
	<div class="form-group">
		<%= f.label :username, class: "control-label" %>
		<%= f.text_field :username, class: "form-control", required: true %>
	</div>
	<div class="form-group">
		<%= f.label :password, class: "control-label" %>
		<%= f.password_field :password, class: "form-control", required: true %>
	</div>
	<%if flash[:error]%>
	<div id="error_explanation">
		<h2><%= flash[:error] %></h2>
	</div>
	<%end%>
	<%= f.submit "Login", class: "btn btn-primary btn-lg" %>
	<% end %>
</div>
<footer class="masthead text-center">
	<a href="http://github.com/LGordon2/code-challenge-grading/issues?state=open">Issues/Suggestions?</a>
</footer>
